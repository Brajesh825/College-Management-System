<%- include('../Includes/begin.ejs') %>

    <%- include('../Includes/student_nav.ejs') %>


        <section id="content-wrapper">
            <main role="main" class="pt-5 main">

                <div class="main-content">
                    <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                        style="height: 100px; background-size: cover; background-position: center top;">
                        <!-- Header container -->

                    </div>
                    <div class="container-fluid mt--7">
                        <div class="row">
                            <div class="col-xl-12 order-xl-1">
                                <div class="card bg-secondary shadow">
                                    <div class="card-header bg-white border-0">
                                        <div class="row align-items-center">
                                            <div class="col-8">
                                                <h3 class="mb-0">My account</h3>
                                            </div>
                                            <div class="col-4 text-right">
                                                <a href="#!" class="btn btn-sm btn-primary">Settings</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">

                                        <h6 class="heading-small text-muted mb-4">Student Information</h6>
                                        <div class="pl-lg-4">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Student Name</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p><%= data[0].s_name %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Email</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p><%= data[0].email %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Date of Birth</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p><%= dob %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Joining Date</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p><%= jds %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <hr class="my-4">
                                        <h6 class="heading-small text-muted mb-4">Course information</h6>
                                        <div class="pl-lg-4">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Department</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p><%= dname %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Section</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p><%= data[0].section %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="my-4">
                                        <!-- Address -->
                                        <h6 class="heading-small text-muted mb-4">Contact information</h6>
                                        <div class="pl-lg-4">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Address</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p><%= data[0].s_address %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Contact Number
                                                            (Student)</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p><%= data[0].contact %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>




            </main>
        </section>

        <%- include('../Includes/student_end.ejs') %>